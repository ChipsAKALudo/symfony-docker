{% extends 'base.html.twig' %}

{% block title %}New Post{% endblock %}

{% block body %}
    <form method="post" class="flex min-h-screen">
        <div class="flex-1 flex justify-center p-8">
            <div class="w-full max-w-lg bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <h1 class="text-2xl font-bold text-center mb-6">Create new Post</h1>

                {{ form_start(form) }}
                    <div class="grid grid-cols-2 gap-6">
                        <div class="col-span-2">
                            <label for="{{ form.content.vars.id }}" class="block text-gray-700 text-sm font-bold mb-2">Contenu du post</label>
                            {{ form_widget(form.content, { 'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'} }) }}
                            {{ form_errors(form.content) }}
                        </div>
                        <div class="col-span-2">
                            <label for="{{ form.tags.vars.id }}" class="block text-gray-700 text-sm font-bold mb-2">Tags (séparés par des virgules)</label>
                            {{ form_widget(form.tags, { 'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'} }) }}
                            {{ form_errors(form.tags) }}
                        </div>
                    </div>

                    <div class="flex justify-center mt-12">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                            Publier ce post
                        </button>
                    </div>
                    <a href="{{ path('app_home') }}" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                        Retour au fil d'actualité
                    </a>
                {{ form_end(form) }}
            </div>
        </div>
    </form>
{% endblock %}
